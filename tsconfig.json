{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "CommonJS",                      
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./src",                         
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },


  "include": ["src/**/*", "tests/**/*", "src/Calendar.test.ts"],
  "exclude": ["node_modules"]
}